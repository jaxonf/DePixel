<?xml version="1.0" encoding="UTF-8"?>
<project name="depixel" default="all">
  
  
  <property file="depixel.properties"/>
  <!-- Uncomment the following property if no tests compilation is needed -->
  <!-- 
  <property name="skip.tests" value="true"/>
   -->
  
  <!-- Compiler options -->
  
  <property name="compiler.debug" value="on"/>
  <property name="compiler.generate.no.warnings" value="off"/>
  <property name="compiler.args" value=""/>
  <property name="compiler.max.memory" value="128m"/>
  <patternset id="ignored.files">
    <exclude name="**/CVS/**"/>
    <exclude name="**/SCCS/**"/>
    <exclude name="**/RCS/**"/>
    <exclude name="**/rcs/**"/>
    <exclude name="**/.DS_Store/**"/>
    <exclude name="**/.svn/**"/>
    <exclude name="**/.pyc/**"/>
    <exclude name="**/.pyo/**"/>
    <exclude name="**/*.pyc/**"/>
    <exclude name="**/*.pyo/**"/>
    <exclude name="**/.git/**"/>
    <exclude name="**/*.hprof/**"/>
    <exclude name="**/_svn/**"/>
    <exclude name="**/.hg/**"/>
    <exclude name="**/*.lib/**"/>
    <exclude name="**/*~/**"/>
    <exclude name="**/__pycache__/**"/>
    <exclude name="**/.bundle/**"/>
    <exclude name="**/*.rbc/**"/>
  </patternset>
  <patternset id="library.patterns">
    <include name="*.zip"/>
    <include name="*.apk"/>
    <include name="*.war"/>
    <include name="*.egg"/>
    <include name="*.ear"/>
    <include name="*.ane"/>
    <include name="*.swc"/>
    <include name="*.jar"/>
  </patternset>
  <patternset id="compiler.resources">
    <exclude name="**/?*.java"/>
    <exclude name="**/?*.form"/>
    <exclude name="**/?*.class"/>
    <exclude name="**/?*.groovy"/>
    <exclude name="**/?*.scala"/>
    <exclude name="**/?*.flex"/>
    <exclude name="**/?*.kt"/>
    <exclude name="**/?*.clj"/>
  </patternset>
  
  <!-- JDK definitions -->
  
  <property name="jdk.bin.1.8" value="${jdk.home.1.8}/bin"/>
  <path id="jdk.classpath.1.8">
    <fileset dir="${jdk.home.1.8}">
      <include name="lib/ant-javafx.jar"/>
      <include name="lib/dt.jar"/>
      <include name="lib/javafx-mx.jar"/>
      <include name="lib/jconsole.jar"/>
      <include name="lib/sa-jdi.jar"/>
      <include name="lib/tools.jar"/>
      <include name="jre/lib/charsets.jar"/>
      <include name="jre/lib/deploy.jar"/>
      <include name="jre/lib/htmlconverter.jar"/>
      <include name="jre/lib/javaws.jar"/>
      <include name="jre/lib/jce.jar"/>
      <include name="jre/lib/jfr.jar"/>
      <include name="jre/lib/jfxswt.jar"/>
      <include name="jre/lib/jsse.jar"/>
      <include name="jre/lib/management-agent.jar"/>
      <include name="jre/lib/plugin.jar"/>
      <include name="jre/lib/resources.jar"/>
      <include name="jre/lib/rt.jar"/>
      <include name="jre/lib/ext/cldrdata.jar"/>
      <include name="jre/lib/ext/dnsns.jar"/>
      <include name="jre/lib/ext/jfxrt.jar"/>
      <include name="jre/lib/ext/localedata.jar"/>
      <include name="jre/lib/ext/nashorn.jar"/>
      <include name="jre/lib/ext/sunec.jar"/>
      <include name="jre/lib/ext/sunjce_provider.jar"/>
      <include name="jre/lib/ext/sunpkcs11.jar"/>
      <include name="jre/lib/ext/zipfs.jar"/>
    </fileset>
  </path>
  
  <property name="project.jdk.home" value="${jdk.home.1.8}"/>
  <property name="project.jdk.bin" value="${jdk.bin.1.8}"/>
  <property name="project.jdk.classpath" value="jdk.classpath.1.8"/>
  <!-- Register Custom Compiler Taskdefs -->
  <property name="javac2.home" value="${idea.home}/lib"/>
  <path id="javac2.classpath">
    <pathelement location="${javac2.home}/javac2.jar"/>
    <pathelement location="${javac2.home}/jdom.jar"/>
    <pathelement location="${javac2.home}/asm4-all.jar"/>
    <pathelement location="${javac2.home}/jgoodies-forms.jar"/>
  </path>
  <target name="register.custom.compilers">
    <taskdef name="javac2" classname="com.intellij.ant.Javac2" classpathref="javac2.classpath"/>
    <taskdef name="instrumentIdeaExtensions" classname="com.intellij.ant.InstrumentIdeaExtensions" classpathref="javac2.classpath"/>
  </target>
  
  <!-- Modules -->
  
  
  <!-- Module depixel -->
  
  <dirname property="module.depixel.basedir" file="${ant.file}"/>
  
  
  <property name="module.jdk.home.depixel" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.depixel" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.depixel" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.depixel" value="-encoding UTF-8 -source 1.6 ${compiler.args}"/>
  
  <property name="depixel.output.dir" value="${module.depixel.basedir}/out/production/depixel"/>
  <property name="depixel.testoutput.dir" value="${module.depixel.basedir}/out/test/depixel"/>
  
  <path id="depixel.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="depixel.module.production.classpath">
    <path refid="${module.jdk.classpath.depixel}"/>
  </path>
  
  <path id="depixel.runtime.production.module.classpath">
    <pathelement location="${depixel.output.dir}"/>
  </path>
  
  <path id="depixel.module.classpath">
    <path refid="${module.jdk.classpath.depixel}"/>
    <pathelement location="${depixel.output.dir}"/>
  </path>
  
  <path id="depixel.runtime.module.classpath">
    <pathelement location="${depixel.testoutput.dir}"/>
    <pathelement location="${depixel.output.dir}"/>
  </path>
  
  
  <patternset id="excluded.from.module.depixel">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.depixel">
    <patternset refid="excluded.from.module.depixel"/>
  </patternset>
  
  <path id="depixel.module.sourcepath">
    <dirset dir="${module.depixel.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.depixel" depends="compile.module.depixel.production,compile.module.depixel.tests" description="Compile module depixel"/>
  
  <target name="compile.module.depixel.production" depends="register.custom.compilers" description="Compile module depixel; production classes">
    <mkdir dir="${depixel.output.dir}"/>
    <javac2 destdir="${depixel.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.depixel}/javac">
      <compilerarg line="${compiler.args.depixel}"/>
      <bootclasspath refid="depixel.module.bootclasspath"/>
      <classpath refid="depixel.module.production.classpath"/>
      <src refid="depixel.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.depixel"/>
    </javac2>
    
    <copy todir="${depixel.output.dir}">
      <fileset dir="${module.depixel.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.depixel.tests" depends="register.custom.compilers,compile.module.depixel.production" description="compile module depixel; test classes" unless="skip.tests"/>
  
  <target name="clean.module.depixel" description="cleanup module">
    <delete dir="${depixel.output.dir}"/>
    <delete dir="${depixel.testoutput.dir}"/>
  </target>
  
  <target name="init" description="Build initialization">
    <!-- Perform any build initialization in this target -->
  </target>
  
  <target name="clean" depends="clean.module.depixel" description="cleanup all"/>
  
  <target name="build.modules" depends="init, clean, compile.module.depixel" description="build all modules"/>
  
  <target name="all" depends="build.modules" description="build all"/>
</project>